<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg %n</pattern>
    </encoder>
  </appender>

  <appender name="API_NO_LOGIN_FILE" class="ch.qos.logback.core.FileAppender">
    <file>./log/api_no_login.log</file>
    <append>false</append>
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="API_LOGIN_ONLY_FILE" class="ch.qos.logback.core.FileAppender">
    <file>./log/api_login_only.log</file>
    <append>false</append>
    <encoder>
      <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="API_NO_LOGIN_LOGGER" level="TRACE" additivity="false" >
    <appender-ref ref="API_NO_LOGIN_FILE"/>
  </logger>

  <logger name="API_LOGIN_ONLY_LOGGER" level="TRACE" additivity="false">
    <appender-ref ref="API_LOGIN_ONLY_FILE"/>
  </logger>


  <logger name="org.littleshoot.proxy.impl.ClientToProxyConnection" level="OFF"/>
  <logger name="org.littleshoot.proxy.impl.ProxyToServerConnection" level="OFF"/>
  <logger name="com.browserup.bup.filters.HarCaptureFilter" level="WARN"/>
  <logger name="io.github.bonigarcia.wdm.WebDriverManager" level="WARN"/>
  <logger name="com.codeborne.selenide.WebDriverThreadLocalContainer" level="WARN"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>